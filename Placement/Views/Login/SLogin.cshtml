@using Microsoft.AspNetCore.Http
@model Placement.Models.Student
@inject IHttpContextAccessor HttpContextAccessor


@{
    ViewData["Title"] = "SLogin";
    Layout = "Common";

}

 @{
     ViewBag.PassWord = @HttpContextAccessor.HttpContext.Session.GetString("LoginPassWord");
  }

 





<body style=" background-color:bisque">
<div class="row row d-flex aligns-items-center justify-content-center" style="padding-top:100px">
    <div class="col-4 card p-3 px-5 py-5 mt-3 bg-light">
        <h3 style = text-align:center >Student Login </h3>
        <form asp-action="SLogin">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
             <div class="form-row align-items-center">
                <label asp-for="StudentId" class="control-label"></label>
                <input asp-for="StudentId" class="form-control" />
                <span asp-validation-for="StudentId" class="text-danger"></span>
            </div>
          
            <div class="form-row align-items-center">
                <label asp-for="PassWord" class="control-label"></label>
                <input asp-for="PassWord" type = "password" class="form-control" />
                <span asp-validation-for="PassWord" class="text-danger"></span>
            </div>
            <p>
                @if(ViewBag.PassWord != null)
                {
                     <strong style="color:red">*PassWord Invalid</strong> 
                }
            </p>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>

