@using Microsoft.AspNetCore.Http
@model Placement.Models.Student
@inject IHttpContextAccessor HttpContextAccessor


@{
    ViewData["Title"] = "SLogin";
    Layout = "Common";

}

 @{
     ViewBag.PassWord = @HttpContextAccessor.HttpContext.Session.GetString("LoginPassWord");
  }

 

<h1>Student Login</h1>

<h4>Student</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SLogin">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
             <div class="form-group">
                <label asp-for="StudentId" class="control-label"></label>
                <input asp-for="StudentId" class="form-control" />
                <span asp-validation-for="StudentId" class="text-danger"></span>
            </div>
          
            <div class="form-group">
                <label asp-for="PassWord" class="control-label"></label>
                <input asp-for="PassWord" type = "password" class="form-control" />
                <span asp-validation-for="PassWord" class="text-danger"></span>
            </div>
            <p>
                @if(ViewBag.PassWord != null)
                {
                     <strong style="color:red">*PassWord Invalid</strong> 
                }
            </p>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
